<% @gig.where(premiered: true).order(start_date: :desc).each do |g| %>
  <% if g.actor %>
    <div id="actor-row">
      <%= link_to show_path(g.id), data: { turbo_frame: "modal" }, class: 'listing-jobs modal-1' do %>
        <div class="stuck-col-jobs"><%= g.piece %> <span><%= cl_image_tag(cl_img(g)) %></span></div>
        <div class="role-col-jobs jobs-same-class"><%= g.role %></div>
        <div class="spielort-col-jobs jobs-same-class"><%= g.location %></div>
        <li class="datum-col-jobs jobs-same-class"><span>( </span><%= g.start_date.strftime("%Y") %><span> )</span></li>
      <% end %>
    </div>
  <% elsif g.director %>
    <div id="director-row">
        <ul class="listing-jobs">
          <li class="stuck-col-jobs"><%= g.piece %> <span><%= cl_image_tag(cl_img(g)) %></span></li>
          <% if g.role %>
            <li class="role-col-jobs jobs-same-class"><%= g.role %></li>
          <% end %>
          <% if g.location %>
            <li class="spielort-col-jobs jobs-same-class"><%= g.location %></li>
          <% end %>
          <li class="datum-col-jobs jobs-same-class"><span>( </span><%= g.start_date.strftime("%Y") %><span> )</span></li>
        </ul>
    </div>
  <% elsif g.texter %>
    <div id="texter-row">
        <ul class="listing-jobs">
          <li class="stuck-col-jobs"><%= g.piece %> <span><%= cl_image_tag(cl_img(g)) %></span></li>
          <% if g.role %>
            <li class="role-col-jobs jobs-same-class"><%= g.role %></li>
          <% end %>
          <% if g.location %>
            <li class="spielort-col-jobs jobs-same-class"><%= g.location %></li>
          <% end %>
          <li class="datum-col-jobs jobs-same-class"><span>( </span><%= g.start_date.strftime("%Y") %><span> )</span></li>
        </ul>
    </div>
  <% end %>
<% end %>
