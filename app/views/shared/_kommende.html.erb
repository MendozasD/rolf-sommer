<section class="stickers-row">
  <div class="sticker-1 schauspieler-sticker">Schauspieler</div>
  <div class="sticker-1 director-sticker">Regisseur</div>
  <div class="sticker-1 texter-sticker">Texter</div>
</section>

<div class="kommende-card">
  <div class="title-row">
    <p class="col-title stuck-col">St√ºck</p>
    <p class="col-title role-col">Role</p>
    <p class="col-title spielort-col">Spielort</p>
    <p class="col-title datum-col">Premiere</p>
  </div>

  <% @gig.each do |g| %>
    <% if !g.premiered %>
      <ul class="gigs-row">
        <%# If statement filtering stickers for perfomer's field %>
        <% if g.actor %>
          <li class="stuck-col piece-title schauspieler-sticker"><%= g.piece %></li>
        <% elsif g.director %>
          <li class="stuck-col piece-title director-sticker"><%= g.piece %></li>
        <% else g.texter %>
          <li class="stuck-col piece-title texter-sticker"><%= g.piece %></li>
        <% end %>
        <li class="role-col"><%= g.role %></li>
        <li class="spielort-col"><%= g.location %></li>
        <li class="datum-col"><%= g.start_date.strftime("%d %m %y") %></li>
      </ul>
    <% end %>
  <% end %>
</div>
