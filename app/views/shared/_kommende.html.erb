<%# I18n TRANSLATES THE DATE TO GERMAN %>
<% I18n.with_locale(:de) do %>
  <div class="kommende-card">
    <div class="title-row">
      <p class="title-column stuck-col">St√ºck</p>
      <p class="title-column datum-col">Premiere</p>
      <p class="title-column spielort-col">Spielort</p>
    </div>

    <% @gig.where(premiered: false).each do |g| %>
      <ul class="gigs-row">
        <li class="stuck-col piece-title">
          <% if g.actor %>
              <%= g.piece %> <span><%= cl_image_tag(cl_img(g)) %></span>
          <% elsif g.director %>
              <%= g.piece %> <span><%= cl_image_tag(cl_img(g)) %></span>
          <% else g.texter %>
              <%= g.piece %> <span><%= cl_image_tag(cl_img(g)) %></span>
          <% end %>
        <li class="datum-col"><%= l(g.start_date, format: '%d. %b. %Y') || "" %></li>
        <li class="spielort-col"><%= g.location || "" %></li>
        </li>
      </ul>
    <% end %>
  </div>
<% end %>
