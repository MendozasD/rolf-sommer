<div class="kommende-card">
  <div class="title-row">
    <p class="title-column stuck-col">St√ºck</p>
    <p class="title-column datum-col">Premiere</p>
    <p class="title-column spielort-col">Spielort</p>
  </div>

  <% @gig.each do |g| %>
    <% if !g.premiered %>
      <ul class="gigs-row">
        <%# If statement filtering stickers for perfomer's field %>
        <% if g.actor %>
        <%# ACTOR FIELD %>
          <li class="stuck-col piece-title schauspieler-sticker">
            <%= g.piece %>
          </li>
        <% elsif g.director %>
        <%# DIRECTOR FIELD %>
          <li class="stuck-col piece-title director-sticker">
            <%= g.piece %>
          </li>
        <% else g.texter %>
        <%# TEXTER FIELD %>
          <li class="stuck-col piece-title texter-sticker">
            <%= g.piece %>
          </li>
        <% end %>
        <%# DATE FIELD %>
        <% if g.start_date %>
          <li class="datum-col"><%= l(g.start_date, format: '%d %b. %Y') %></li>
        <% end %>
        <%# LOCATION FIELD %>
        <li class="spielort-col">
          <%= g.location %>
        </li>
      </ul>
    <% end %>
  <% end %>
</div>
