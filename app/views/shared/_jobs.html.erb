<div class="jobs-filter" data-controller="filter border">
  <section class="job-button-filter">
    <button id="btn-all" class="btn-border-off" data-action="click->filter#showAll click->border#all" data-border-target="button">Alles</button>
    <button id="btn-actor" class="btn-border-off" data-action="click->filter#showActor click->border#actor" data-border-target="button">Schauspieler</button>
    <button id="btn-director" class="btn-border-off" data-action="click->filter#showDirector click->border#director" data-border-target="button">Regissuer</button>
    <button id="btn-texter" class="btn-border-off" data-action="click->filter#showTexter click->border#texter" data-border-target="button">Texter</button>
  </section>

  <div class="kommende-card jobs-card">
    <div class="title-row">
      <p class="col-title stuck-col">St√ºck</p>
      <p class="col-title role-col">Role</p>
      <p class="col-title spielort-col">Spielort</p>
      <p class="col-title datum-col">Premiere</p>
    </div>

    <div id="actor-row">
      <%= render 'shared/actor-list' %>
    </div>
    <div id="director-row">
      <%= render 'shared/director-list' %>
    </div>
    <div id="texter-row">
      <%= render 'shared/texter-list' %>
    </div>
  </div>
</div>
